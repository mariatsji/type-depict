extra-source-files: CHANGELOG.md


library
    hs-source-dirs: src
    default-language: Haskell2010
    build-depends:
        base ^>=4.14.3.0,
        attoparsec,
        conduit,
        containers,
        multimap ^>=1.2.1,
        stm,
        text
    exposed-modules:
        Vis
        

executable sim
    main-is:          Main.hs
    ghc-options:     -O2 -rtsopts -threaded -with-rtsopts=-K1K -rtsopts "-with-rtsopts=-N2 -T"
    build-depends:
        base ^>=4.14.3.0,
        sim,
        text
    hs-source-dirs:   app
    default-language: Haskell2010

Test-Suite sim-test
    type:       exitcode-stdio-1.0
    main-is:    Spec.hs
    ghc-options:     -O2 -rtsopts -threaded -with-rtsopts=-K1K -rtsopts "-with-rtsopts=-N2 -T"
    hs-source-dirs: test
    build-depends:
        sim,
        base ^>=4.14.3.0,
        hspec,
        text
    other-modules:
    default-language: Haskell2010
